    @media (max-width: 600px) {
        #close {
            width: 20%;
        }

        #content {
            width: 80%;
            animation: desplace 0.5s ease forwards;
        }

        #contentMovements #movement #preview {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        #contentMovements #movement #info h3 {
            flex-direction: column;
            font-size: medium;
        }
    }

    @keyframes desplace {
        0% {
            transform: translateX(100%);
        }
        100% {
            transform: translateX(0);
