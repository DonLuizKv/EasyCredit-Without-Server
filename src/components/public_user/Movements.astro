<style>
    #info {
        animation: more 0.3s ease-out forwards;
    }

    @keyframes more {
        0% {
            transform: translateY(-100%);
        }
        100% {
            transform: translateY(0%);
        }
    }

    #contentMovements {
        overflow-y: auto;
        height: 100%;
    }

    #contentMovements::-webkit-scrollbar {
        width: 16px;
    }

    #contentMovements::-webkit-scrollbar-track {
        background-color: transparent;
    }

    #contentMovements::-webkit-scrollbar-thumb {
        background-color: #d6dee1;
    }
    #contentMovements::-webkit-scrollbar-thumb {
        background-color: #d6dee1;
        border-radius: 20px;
    }
    #contentMovements::-webkit-scrollbar-thumb {
        background-color: #d6dee1;
        border-radius: 20px;
        border: 6px solid transparent;
        background-clip: content-box;
    }

    #showMore {
        display: none
    }

    #content {
        animation: desplace 0.5s ease forwards;
    }

    @media (max-width: 1400px) {
        #close {
            width: 60%;
